@using System.Collections;
@model IEnumerable<RAS.Bootcamp.RumahAqiqah.Data.Entities.Promo> 
@{
    ViewData["Title"] = "Data Promo";
}

<table class="table" >
    
    <tr>
        <th>
            Awal Promo
        </th>
        <th>
            Akhir Promo
        </th>
        <th>
            Kode Promo
        </th>
        <th>
            Jenis Promo
        </th>
        <th>
            Kuota Promo
        </th>
        <th>
            Besar Diskon (FIXED)
        </th>
        <th>
            Besar Diskon (Persen)
        </th>
        <th>
            Banner Promo
        </th>


        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PromoType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quota)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PercentageValue)
        </td>
        <td>
            <img src = @item.url width="300" height="150">
        </td>
        <td>
            <a type="edit" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="Promo" asp-action="Update">Edit</a>
        </td>
        <td> 
            <a type="delete" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Promo" asp-action="Delete">Delete</a>
        </td>
    </tr>
}
    <th>
        <a class="btn btn-primary" asp-area="" asp-controller="Promo" asp-action="Create">Input Data Produk</a>
    </th>
</table>
