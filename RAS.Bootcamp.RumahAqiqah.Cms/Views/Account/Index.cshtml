@model IEnumerable<RAS.Bootcamp.RumahAqiqah.Data.Entities.Account>

@{
    ViewData["Title"] = "Index";
}

<!-- Striped rows start -->
<section class="section">
    <div class="row" id="table-striped">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Account Page</h4>
                    <a href="/Account/Create" class="btn btn-primary">Create Account</a>
                </div>
                <div class="card-content">
                    <!-- table striped -->
                    <div class="table-responsive">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Username)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Password)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LastLogin)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsDeleted)
                                    </th>
                                    <th>ACTION</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastLogin)
                                    </td>
                                    @if (item.IsDeleted) {
                                        <td>True</td>
                                    } else {
                                        <td>False</td>
                                    }
                                    <td>
                                        <form asp-action="Delete" asp-route-id="@item.Id">
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </form>
                                        @* <a href="/Account/Delete/@item.Id" class="btn btn-danger">Delete</a> *@
                                    </td>
                                </tr>
                            }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Striped rows end -->