@model IEnumerable<RAS.Bootcamp.RumahAqiqah.Data.Entities.Product> 

@{
    ViewData["Title"] = "Product Page";
}
<!-- Striped rows start -->
<section class="section">
    <div class="row" id="table-striped">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Product Page</h4>
                    <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Create Product</a>
                </div>
                <div class="card-content">
                    <!-- table striped -->
                    <div class="table-responsive">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr class="text-center">
                                    <th>PRODUCT ID</th>
                                    <th>PRODUCT CATEGORY ID</th>
                                    <th>CODE</th>
                                    <th>TITLE</th>
                                    <th>IMAG</th>
                                    <th>PRICE</th>
                                    <th>DESCRIPTION</th>
                                    <th>SERVICE TYPE</th>
                                    <th>ACTION</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model) 
                                {
                                <tr>
                                    <td class="thead">
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td class="thead">
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td class="thead">
                                        @Html.DisplayFor(modelItem => item.ProductCategoryId)
                                    </td>
                                    <td class="thead">
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td class="thead">
                                        <img alt="Image" width="150" height="150" src="@item.Url">
                                    </td>
                                    <td class="thead">
                                         @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td class="thead">
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td class="thead">
                                        @Html.DisplayFor(modelItem => item.ServiceType)
                                    </td>
                                    <td class="text-center">
                                        <a href="/Product/UpdateProduct/@item.Id" class="btn btn-primary">Update</a>
                                        <a href="/Product/Details/@item.Id" class="btn btn-warning">Details</a>
                                        <a href="/Product/Delete/@item.Id" class="btn btn-danger">Delete</a>                        
                                    </td>
                                </tr>       
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Striped rows end -->